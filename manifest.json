{
    "manifest_version": 2,

    "name": "FavLover for Twitter",
    "short_name": "FavLover",
    "description": "Takes back your beloved stars to Twitter!",
    "version": "1.1",
    
    "web_accessible_resources": [
        "sprite_sheet_1x.png",
        "sprite_sheet_2x.png",
        "web_heart_animation.png"
    ],
    "content_scripts": [{
	"matches": ["*://*.twitter.com/*"],
	"css": ["fav.css"],
	"run_at" : "document_start"
    }],
    "icons": {
	"16": "icon16.png",
	"48": "icon48.png",
	"128": "icon128.png"
    },
    "permissions": [
	"*://*.twitter.com/*"
    ]
}
